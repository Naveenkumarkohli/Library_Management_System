<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - Library System</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; justify-content: center; align-items: center; min-height: 100vh; margin: 0; padding: 20px; }
    .container { display: flex; gap: 30px; max-width: 900px; width: 100%; }
    .card { background: white; padding: 40px; border-radius: 16px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
    .login-card { flex: 1; max-width: 400px; }
    .demo-card { flex: 1; max-width: 400px; background: #f8f9fa; border: 2px solid #e9ecef; }
    
    h2 { text-align: center; margin-bottom: 30px; color: #333; font-weight: 700; }
    .demo-title { color: #667eea; font-size: 1.3rem; margin-bottom: 20px; display: flex; align-items: center; gap: 10px; }
    
    .form-group { margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; font-weight: 600; color: #333; }
    input { width: 100%; padding: 14px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 14px; transition: border-color 0.3s; }
    input:focus { outline: none; border-color: #667eea; }
    
    .btn { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 14px; border: none; border-radius: 8px; width: 100%; cursor: pointer; font-weight: 600; font-size: 16px; transition: transform 0.2s; }
    .btn:hover { transform: translateY(-2px); }
    
    .demo-credentials { margin-bottom: 25px; }
    .credential-item { background: white; padding: 15px; border-radius: 8px; margin-bottom: 15px; border-left: 4px solid #667eea; }
    .credential-item.user { border-left-color: #28a745; }
    .credential-header { font-weight: 600; color: #333; margin-bottom: 8px; display: flex; align-items: center; gap: 8px; }
    .credential-info { font-size: 14px; color: #666; margin-bottom: 5px; }
    .credential-data { font-family: 'Courier New', monospace; background: #f1f3f4; padding: 8px; border-radius: 4px; font-size: 13px; }
    
    .demo-note { background: #e3f2fd; padding: 15px; border-radius: 8px; border-left: 4px solid #2196f3; margin-top: 20px; }
    .demo-note p { margin: 0; font-size: 14px; color: #1565c0; }
    
    .links { margin-top: 20px; text-align: center; }
    .links a { color: #667eea; text-decoration: none; font-weight: 500; }
    .links a:hover { text-decoration: underline; }
    
    .flash { margin-bottom: 20px; padding: 15px; border-radius: 8px; }
    .flash-success { background: #d4edda; color: #155724; border-left: 4px solid #28a745; }
    .flash-error { background: #f8d7da; color: #721c24; border-left: 4px solid #dc3545; }
    
    @media (max-width: 768px) {
      .container { flex-direction: column; }
      .demo-card { order: -1; }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Login Form -->
    <div class="card login-card">
      <h2><i class="fas fa-book-reader"></i> Library System Login</h2>

      <% if (success.length > 0) { %>
        <% success.forEach(msg => { %>
          <div class="flash flash-success"><i class="fas fa-check-circle"></i> <%= msg %></div>
        <% }) %>
      <% } %>
      <% if (error.length > 0) { %>
        <% error.forEach(msg => { %>
          <div class="flash flash-error"><i class="fas fa-exclamation-circle"></i> <%= msg %></div>
        <% }) %>
      <% } %>

      <form action="/login" method="post">
        <div class="form-group">
          <label for="username"><i class="fas fa-user"></i> Username</label>
          <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
          <label for="password"><i class="fas fa-lock"></i> Password</label>
          <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn">
          <i class="fas fa-sign-in-alt"></i> Login
        </button>
      </form>

      <div class="links">
        <p><a href="/forgot-password"><i class="fas fa-key"></i> Forgot your password?</a></p>
        <p>Don't have an account? <a href="/register"><i class="fas fa-user-plus"></i> Register here</a></p>
      </div>
    </div>

    <!-- Demo Credentials -->
    <div class="card demo-card">
      <h2 class="demo-title"><i class="fas fa-rocket"></i> Demo Access</h2>
      
      <div class="demo-credentials">
        <div class="credential-item">
          <div class="credential-header">
            <i class="fas fa-user-shield"></i> Administrator Access
          </div>
          <div class="credential-info">Full system access - Manage books, users, and settings</div>
          <div class="credential-data">
            <strong>Username:</strong> admin<br>
            <strong>Password:</strong> admin123
          </div>
        </div>

        <div class="credential-item user">
          <div class="credential-header">
            <i class="fas fa-user"></i> Regular User Access
          </div>
          <div class="credential-info">Browse and borrow books from the library</div>
          <div class="credential-data">
            <strong>Username:</strong> user<br>
            <strong>Password:</strong> user123
          </div>
        </div>
      </div>

      <div class="demo-note">
        <p><i class="fas fa-info-circle"></i> <strong>Project Showcase:</strong> Use these credentials to explore all features of this Library Management System. Perfect for demonstrating the complete functionality to employers, clients, or collaborators.</p>
      </div>
    </div>
  </div>

  <script>
    // Auto-fill credentials when clicking on demo boxes
    document.querySelectorAll('.credential-item').forEach(item => {
      item.addEventListener('click', function() {
        const isAdmin = this.classList.contains('credential-item') && !this.classList.contains('user');
        const username = isAdmin ? 'admin' : 'user';
        const password = isAdmin ? 'admin123' : 'user123';
        
        document.getElementById('username').value = username;
        document.getElementById('password').value = password;
        
        // Add visual feedback
        this.style.transform = 'scale(0.98)';
        setTimeout(() => {
          this.style.transform = 'scale(1)';
        }, 150);
      });
    });
  </script>
</body>
</html>
