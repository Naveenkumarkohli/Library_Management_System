<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Users - Library System</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; background: #f0f2f5; margin: 0; padding: 20px; }
    .container { max-width: 1400px; margin: auto; }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; }
    .header h1 { margin: 0; color: #333; }
    .nav-links { display: flex; gap: 15px; }
    .nav-link { background: #667eea; color: white; padding: 10px 16px; border-radius: 8px; text-decoration: none; font-weight: 600; }
    .nav-link:hover { background: #5a6fd8; }
    .btn-logout { background: #e74c3c; color: white; padding: 10px 16px; border-radius: 8px; text-decoration: none; font-weight: 600; }
    
    .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 30px; }
    .stat-card { background: white; padding: 25px; border-radius: 16px; box-shadow: 0 8px 25px rgba(0,0,0,0.1); text-align: center; }
    .stat-card h3 { margin: 0 0 10px 0; font-size: 2.5rem; font-weight: 700; }
    .stat-card p { margin: 0; color: #666; font-weight: 500; }
    .stat-card.users { border-left: 5px solid #667eea; }
    .stat-card.admins { border-left: 5px solid #28a745; }
    .stat-card.pending { border-left: 5px solid #ffc107; }
    
    .section { background: white; padding: 25px; border-radius: 16px; box-shadow: 0 8px 25px rgba(0,0,0,0.1); margin-bottom: 30px; }
    .add-user-form { display: flex; gap: 15px; align-items: end; flex-wrap: wrap; }
    .form-group { display: flex; flex-direction: column; }
    .form-group label { margin-bottom: 5px; font-weight: 600; color: #333; }
    .form-group input, .form-group select { padding: 12px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 14px; min-width: 150px; }
    .form-group input:focus, .form-group select:focus { outline: none; border-color: #667eea; }
    .btn-add { background: #28a745; color: white; border: none; padding: 12px 24px; border-radius: 8px; cursor: pointer; font-weight: 600; }
    .btn-add:hover { background: #218838; }
    
    /* Search Bar */
    .search-section { margin-bottom: 20px; }
    .search-input { width: 100%; max-width: 400px; padding: 12px 16px; border: 1px solid #ddd; border-radius: 8px; font-size: 14px; }
    .search-input:focus { outline: none; border-color: #667eea; }
    
    /* Users Table */
    .users-table-section { background: white; padding: 25px; border-radius: 16px; box-shadow: 0 8px 25px rgba(0,0,0,0.1); margin-bottom: 30px; }
    .users-table-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
    .users-table-header h2 { margin: 0; color: #333; }
    .btn-new-user { background: #667eea; color: white; padding: 10px 16px; border-radius: 8px; text-decoration: none; font-weight: 600; }
    .btn-new-user:hover { background: #5a6fd8; }
    
    .users-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    .users-table th { background: #f8f9fa; padding: 15px 12px; text-align: left; font-weight: 600; color: #333; border-bottom: 2px solid #e9ecef; }
    .users-table td { padding: 15px 12px; border-bottom: 1px solid #e9ecef; vertical-align: middle; }
    .users-table tbody tr:hover { background: #f8f9fa; }
    
    .user-role { display: inline-block; padding: 4px 12px; border-radius: 15px; font-size: 12px; font-weight: 600; text-transform: lowercase; }
    .role-admin { background: #d4edda; color: #155724; }
    .role-user { background: #cce5ff; color: #004085; }
    
    .status-badge { display: inline-block; padding: 4px 12px; border-radius: 15px; font-size: 12px; font-weight: 600; text-transform: uppercase; }
    .status-active { background: #d4edda; color: #155724; }
    .status-pending { background: #fff3cd; color: #856404; }
    
    .action-buttons { display: flex; gap: 8px; }
    .action-btn { padding: 6px 10px; border: none; border-radius: 4px; cursor: pointer; font-size: 12px; text-decoration: none; display: inline-flex; align-items: center; gap: 4px; }
    .btn-edit { background: #17a2b8; color: white; }
    .btn-delete { background: #dc3545; color: white; }
    .btn-view { background: #6c757d; color: white; }
    .action-btn:hover { opacity: 0.8; }
    
    /* Modal Styles for User Stats */
    .modal-overlay { 
      display: none; 
      position: fixed; 
      top: 0; 
      left: 0; 
      width: 100%; 
      height: 100%; 
      background: rgba(0,0,0,0.5); 
      z-index: 1000; 
      backdrop-filter: blur(5px);
    }
    .modal-overlay.show { display: flex; align-items: center; justify-content: center; }
    .modal-card { 
      background: white; 
      border-radius: 16px; 
      box-shadow: 0 20px 60px rgba(0,0,0,0.3); 
      max-width: 600px; 
      width: 90%; 
      max-height: 80vh; 
      overflow-y: auto; 
      transform: scale(0.7); 
      opacity: 0; 
      transition: all 0.3s ease;
    }
    .modal-overlay.show .modal-card { transform: scale(1); opacity: 1; }
    .modal-header { 
      padding: 25px 30px 20px; 
      border-bottom: 1px solid #e9ecef; 
      display: flex; 
      justify-content: space-between; 
      align-items: center; 
    }
    .modal-title { margin: 0; color: #333; font-size: 1.4rem; }
    .modal-close { 
      background: none; 
      border: none; 
      font-size: 1.5rem; 
      cursor: pointer; 
      color: #999; 
      padding: 5px; 
      border-radius: 50%; 
      width: 35px; 
      height: 35px; 
      display: flex; 
      align-items: center; 
      justify-content: center;
    }
    .modal-close:hover { background: #f1f3f4; color: #333; }
    .modal-body { padding: 30px; }
    .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 25px; }
    .stat-item { 
      background: #f8f9fa; 
      padding: 20px; 
      border-radius: 12px; 
      text-align: center; 
      border-left: 4px solid #667eea; 
      transition: transform 0.2s;
    }
    .stat-item:hover { transform: translateY(-2px); }
    .stat-item h4 { margin: 0 0 8px 0; font-size: 1.8rem; color: #333; font-weight: 700; }
    .stat-item p { margin: 0; color: #666; font-size: 0.9rem; font-weight: 500; }
    .stat-item.issued { border-left-color: #e74c3c; }
    .stat-item.returned { border-left-color: #28a745; }
    .stat-item.rate { border-left-color: #17a2b8; }
    .activity-section { 
      padding-top: 20px; 
      border-top: 1px solid #e9ecef; 
    }
    .activity-title { 
      margin-bottom: 15px; 
      color: #333; 
      font-size: 1.1rem; 
      display: flex; 
      align-items: center; 
      gap: 8px; 
    }
    .activity-list { max-height: 200px; overflow-y: auto; }
    .activity-item { 
      padding: 12px 0; 
      border-bottom: 1px solid #f1f3f4; 
      display: flex; 
      justify-content: space-between; 
      align-items: center;
    }
    .activity-item:last-child { border-bottom: none; }
    .activity-action { font-weight: 600; color: #333; }
    .activity-book { color: #666; margin: 0 8px; }
    .activity-date { color: #999; font-size: 0.85rem; }
    
    .clickable-row { cursor: pointer; transition: background-color 0.2s; }
    .clickable-row:hover { background: #f1f3f4 !important; }
    
    .pending-section { background: #fff3cd; border: 1px solid #ffeaa7; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1><i class="fas fa-users"></i> Manage Users</h1>
      <div class="nav-links">
        <a href="/home" class="nav-link"><i class="fas fa-home"></i> Dashboard</a>
        <a href="/admin/books" class="nav-link"><i class="fas fa-book"></i> Books</a>
        <a href="/admin" class="nav-link"><i class="fas fa-cog"></i> Admin Panel</a>
        <a href="/logout" class="btn-logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </div>
    </div>

    <% if (success.length > 0) { %>
      <% success.forEach(msg => { %>
        <div class="flash flash-success"><i class="fas fa-check-circle"></i> <%= msg %></div>
      <% }) %>
    <% } %>
    <% if (error.length > 0) { %>
      <% error.forEach(msg => { %>
        <div class="flash flash-error"><i class="fas fa-exclamation-circle"></i> <%= msg %></div>
      <% }) %>
    <% } %>

    <!-- Stats Cards -->
    <div class="stats-grid">
      <div class="stat-card users">
        <h3><%= stats.totalUsers %></h3>
        <p><i class="fas fa-user"></i> Total Users</p>
      </div>
      <div class="stat-card admins">
        <h3><%= stats.totalAdmins %></h3>
        <p><i class="fas fa-user-shield"></i> Administrators</p>
      </div>
      <div class="stat-card pending">
        <h3><%= stats.pendingRequests %></h3>
        <p><i class="fas fa-clock"></i> Pending Requests</p>
      </div>
    </div>

    <!-- Add User Section -->
    <div class="section">
      <h2><i class="fas fa-user-plus"></i> Add New User</h2>
      <form action="/admin/addUser" method="post" class="add-user-form">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter username" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter password" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter email address">
        </div>
        <div class="form-group">
          <label for="role">Role</label>
          <select id="role" name="role" required>
            <option value="user">User</option>
            <option value="admin">Administrator</option>
          </select>
        </div>
        <button type="submit" class="btn-add"><i class="fas fa-plus"></i> Add User</button>
      </form>
    </div>

    <!-- Users Table Section -->
    <div class="users-table-section">
      <div class="users-table-header">
        <div>
          <h2><i class="fas fa-list"></i> Users List</h2>
          <p style="margin: 5px 0 0 0; color: #666; font-size: 14px;">All users in the system</p>
        </div>
        <a href="#" class="btn-new-user"><i class="fas fa-plus"></i> New User</a>
      </div>
      
      <!-- Search Bar -->
      <div class="search-section">
        <input type="text" class="search-input" placeholder="Search users..." id="searchInput" oninput="performUserSearch()">
      </div>
      
      <table class="users-table" id="usersTable">
        <thead>
          <tr>
            <th>#</th>
            <th>Partner Group</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="usersTableBody">
        </tbody>
      </table>
    </div>

    <!-- Pending Requests -->
    <% if (pendingRequests.length > 0) { %>
      <div class="section pending-section">
        <h2><i class="fas fa-clock"></i> Pending Registration Requests</h2>
        <div class="pending-grid">
          <% pendingRequests.forEach(request => { %>
            <div class="pending-card">
              <h4><i class="fas fa-user-clock"></i> <%= request.username %></h4>
              <p><strong>Email:</strong> <%= request.email %></p>
              <p><strong>Password:</strong> <%= request.password %></p>
              <div class="pending-actions">
                <a href="/approve/<%= request._id %>" class="btn-approve">
                  <i class="fas fa-check"></i> Approve
                </a>
                <a href="/reject/<%= request._id %>" class="btn-reject">
                  <i class="fas fa-times"></i> Reject
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } else { %>
      <div class="section">
        <div style="text-align: center; padding: 30px; color: #666;">
          <i class="fas fa-check-circle" style="font-size: 3rem; margin-bottom: 15px; color: #28a745;"></i>
          <h3>No Pending Requests</h3>
          <p>All registration requests have been processed.</p>
        </div>
      </div>
    <% } %>
  </div>

  <!-- User Stats Modal -->
  <div class="modal-overlay" id="userStatsModal" onclick="closeModal(event)">
    <div class="modal-card" onclick="event.stopPropagation()">
      <div class="modal-header">
        <h3 class="modal-title" id="modalTitle">
          <i class="fas fa-chart-user"></i> User Statistics
        </h3>
        <button class="modal-close" onclick="closeModal()">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="stats-grid">
          <div class="stat-item">
            <h4 id="modal-currently">-</h4>
            <p><i class="fas fa-hand-holding"></i> Currently Reading</p>
          </div>
          <div class="stat-item issued">
            <h4 id="modal-total-issued">-</h4>
            <p><i class="fas fa-book-open"></i> Books Borrowed</p>
          </div>
          <div class="stat-item returned">
            <h4 id="modal-total-returned">-</h4>
            <p><i class="fas fa-undo"></i> Books Returned</p>
          </div>
          <div class="stat-item rate">
            <h4 id="modal-return-rate">-</h4>
            <p><i class="fas fa-star"></i> Return Rate</p>
          </div>
        </div>
        <div class="activity-section">
          <h4 class="activity-title">
            <i class="fas fa-history"></i> Recent Activity
          </h4>
          <div class="activity-list" id="modal-recent-activity">
            <div style="text-align: center; color: #666; font-style: italic; padding: 20px;">
              Loading activity...
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function showUserStats(userId, username) {
      const modal = document.getElementById('userStatsModal');
      const modalTitle = document.getElementById('modalTitle');
      
      modalTitle.innerHTML = `<i class="fas fa-chart-user"></i> ${username}'s Statistics`;
      modal.classList.add('show');
      document.body.style.overflow = 'hidden';
      
      loadUserStatsModal(userId);
    }
    
    function closeModal(event) {
      if (event && event.target !== event.currentTarget) return;
      
      const modal = document.getElementById('userStatsModal');
      modal.classList.remove('show');
      document.body.style.overflow = 'auto';
    }
    
    async function loadUserStatsModal(userId) {
      try {
        const response = await fetch(`/admin/user-stats/${userId}`);
        const data = await response.json();
        
        if (data.success) {
          document.getElementById('modal-currently').textContent = data.stats.currentlyIssued || 0;
          document.getElementById('modal-total-issued').textContent = data.stats.totalIssued || 0;
          document.getElementById('modal-total-returned').textContent = data.stats.totalReturned || 0;
          document.getElementById('modal-return-rate').textContent = (data.stats.returnRate || 0) + '%';
          
          // Update recent activity
          const activityDiv = document.getElementById('modal-recent-activity');
          if (data.recentActivity && data.recentActivity.length > 0) {
            activityDiv.innerHTML = data.recentActivity.map(activity => 
              `<div class="activity-item">
                <div>
                  <span class="activity-action">${activity.action}</span>
                  <span class="activity-book">"${activity.bookTitle}"</span>
                </div>
                <span class="activity-date">${new Date(activity.date).toLocaleDateString()}</span>
              </div>`
            ).join('');
          } else {
            activityDiv.innerHTML = '<div style="text-align: center; color: #999; padding: 20px;">No recent activity</div>';
          }
        } else {
          throw new Error(data.message || 'Failed to load stats');
        }
      } catch (error) {
        console.error('Error loading user stats:', error);
        document.getElementById('modal-currently').textContent = 'Error';
        document.getElementById('modal-total-issued').textContent = 'Error';
        document.getElementById('modal-total-returned').textContent = 'Error';
        document.getElementById('modal-return-rate').textContent = 'Error';
        document.getElementById('modal-recent-activity').innerHTML = 
          '<div style="text-align: center; color: #e74c3c; padding: 20px;">Failed to load activity</div>';
      }
    }

    let searchTimeout;
    async function performUserSearch() {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(async () => {
        const searchTerm = document.getElementById('searchInput').value;
        
        try {
          const params = new URLSearchParams();
          if (searchTerm) params.append('q', searchTerm);
          
          const response = await fetch(`/api/search/users?${params}`);
          const data = await response.json();
          
          if (data.success) {
            updateUsersDisplay(data.users);
          } else {
            console.error('Search failed:', data.message);
          }
        } catch (error) {
          console.error('Search error:', error);
        }
      }, 300); // Debounce search by 300ms
    }
    
    function updateUsersDisplay(users) {
      const tbody = document.getElementById('usersTableBody');
      
      // Clear existing users
      tbody.innerHTML = '';
      
      if (users.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="7" style="text-align: center; padding: 40px; color: #666;">
              <i class="fas fa-search" style="font-size: 2rem; margin-bottom: 10px; display: block;"></i>
              No users found matching your search criteria.
            </td>
          </tr>
        `;
        return;
      }
      
      // Add new users
      users.forEach((user, index) => {
        const row = document.createElement('tr');
        row.className = 'clickable-row';
        row.setAttribute('onclick', `showUserStats('${user._id}', '${user.username}')`);
        
        let deleteButton = '';
        if (user.role !== 'admin' || users.filter(u => u.role === 'admin').length > 1) {
          deleteButton = `
            <form action="/admin/deleteUser" method="post" style="display: inline;" onclick="event.stopPropagation()">
              <input type="hidden" name="id" value="${user._id}">
              <button type="submit" class="action-btn btn-delete" title="Delete" 
                      onclick="return confirm('Are you sure you want to delete this user?')">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          `;
        }
        
        row.innerHTML = `
          <td>${index + 1}</td>
          <td>N/A</td>
          <td>${user.username}</td>
          <td>${user.email || 'Not provided'}</td>
          <td>
            <span class="user-role ${user.role === 'admin' ? 'role-admin' : 'role-user'}">
              ${user.role}
            </span>
          </td>
          <td>
            <span class="status-badge ${user.approved ? 'status-active' : 'status-pending'}">
              ${user.approved ? 'Active' : 'Pending'}
            </span>
          </td>
          <td>
            <div class="action-buttons">
              ${deleteButton}
            </div>
          </td>
        `;
        
        tbody.appendChild(row);
      });
    }
    
    // Initial load
    performUserSearch();
    
    // Close modal on Escape key
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        closeModal();
      }
    });
  </script>
</body>
</html>
